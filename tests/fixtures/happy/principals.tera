---
sshd_command:
    version: 0.2.0
    command: principals
    tokens: '%U %u'
    hostname: false
    complete_user: false
hostname: hostname
search_domains:
    - home.arpa
    - local
---
{% macro principals(fqdn) -%}
{{ fqdn }}
{{ user.name }}@{{ fqdn }}
{%- endmacro input -%}

{{- self::principals(fqdn=hostname) }}
{% for search_domain in search_domains  %}
{{- self::principals(fqdn=hostname ~ "." ~ search_domain) }}
{%  endfor -%}
